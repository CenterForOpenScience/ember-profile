<main id="profile-collaborators">
  <section class="full">
    <div class="profile-box">
      <header>
        <h1>Collaborators</h1>
          <label for="collab-filters">Filter by <select id="collab-filters" onchange={{action 'filter'}}>
            <option value="projects:desc">Projects</option>
            <option value="lastName">Name</option>
            <option value="location">Location</option>
          </select>
          </label>
      </header>
      <div class="profile-content no-padding">
        {{#collaborators-list model=model sortDefinition=sort}}{{/collaborators-list}}
      </div>
    </div>
  </section>
</main>