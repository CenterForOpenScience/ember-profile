{{#each model as |project|}}
  {{#cp-panel}}
    {{#cp-panel-toggle}}
      <div {{action "select" project}}>
        {{#if project.components}}
          <h2>({{pluralize project.components.length "Component"}})</h2>
        {{else}}
          <h2>(No Components)</h2>
        {{/if}}
        <h1>{{project.name}}</h1>
      </div>
    {{/cp-panel-toggle}}
    {{#if project.components}}
      {{#cp-panel-body}}
        <nav>
          {{#each project.components as |component|}}
            {{#link-to component.link}}{{component.name}}{{/link-to}}
          {{/each}}
        </nav>
      {{/cp-panel-body}}
    {{/if}}
  {{/cp-panel}}
{{/each}}